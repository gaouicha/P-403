% \imtaGetEltSize
% Gets the 1/10th of the smallest dimension of the paper used
\def\imtaGetEltSize{%
    \ifdim \paperwidth < \paperheight
        \paperwidth/10
    \else
        \paperheight/10
    \fi%
}

% \imtaMaketitlepage
% Generates the title page
\newcommand\imtaMaketitlepage{%
    \clearpage
